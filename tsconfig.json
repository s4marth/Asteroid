{
  "compilerOptions": {
    "target": "es5",
    //"allowImportingTsExtensions": true,
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "*": ["*", "src/*"]
    }
  },
  //"include": ["src/**/*.ts", "src/**/*.tsx"],
  "include": ["src"]
}
